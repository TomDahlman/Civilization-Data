<%- model_class = Civilization -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:notes) %></th>
      <th></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @civilizations.each do |civilization| %>
      <tr>
        <td><%= link_to civilization.id, civilization_path(civilization) %></td>
        <td><%= civilization.name %></td>
        <td><%= civilization.notes %></td>
        <td></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_civilization_path(civilization), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      civilization_path(civilization),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_civilization_path,
            :class => 'btn btn-primary' %>
